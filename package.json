{
  "name": "hereya-cli",
  "description": "A package manager for infrastructure libraries",
  "version": "0.0.0",
  "author": "The Hereya team",
  "bin": {
    "hereya": "./bin/run.js"
  },
  "bugs": "https://github.com/hereya/hereya-cli/issues",
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "@octokit/rest": "^20.1.1",
    "simple-git": "^3.24.0",
    "yaml": "^2.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10",
    "mock-fs": "^5.2.0",
    "nock": "^13.5.4",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/hereya/hereya-cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "hereya",
    "dirname": "hereya",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {}
  },
  "repository": "hereya/hereya-cli",
  "scripts": {
    "generate": "oclif generate command $COMMAND && shx mkdir src/commands/$COMMAND && shx mv src/commands/$COMMAND.ts src/commands/$COMMAND/index.ts && shx mv test/commands/$COMMAND.test.ts src/commands/$COMMAND/index.test.ts && shx rm -rf test",
    "dev": "./bin/dev.js",
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"src/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "prepare": "husky install",
    "migration:generate": "sequelize-cli migration:generate"
  },
  "types": "dist/index.d.ts",
  "lint-staged": {
    "**/*": "npm run lint -- --fix"
  }
}
